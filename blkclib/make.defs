# Makefile include make.defs.  Generated from make.defs.in by configure.

SHELL = /bin/sh

#--------------------------------------------------------------------
# Library source directory
#--------------------------------------------------------------------

LIBSRC := src

#--------------------------------------------------------------------
# O       - object file extension (typicaly o)
# A       - library file extension (typically a)
# LIBBLKC - BLKC library name
# DEPBLKC - BLKC dependency file name
#--------------------------------------------------------------------

O       := o
A       := a
LIBBLKC := libblkc.$(A)
DEPBLKC := blkc.depend

#--------------------------------------------------------------------
# CXX      - C++ compiler
# CXXFLAGS - compiler flags
# DEFS     - -D options for the compiler
# DEPFLAGS - preprocessing flag to only generate non-standard
#            dependencies
#--------------------------------------------------------------------

CXX      := icpc
CXXFLAGS := -O3 -mp -w
DEFS     := -DHAVE_64BIT_SIZE_T 
DEPFLAGS := -MM
LDFLAGS  := 
REPOSOBJ := 

#--------------------------------------------------------------------
# AR  - library archiver
# SED - stream editor
#--------------------------------------------------------------------

AR  := ar rcs
SED := sed

#--------------------------------------------------------------------
# commands for removing files and creating/deleting directory
#--------------------------------------------------------------------

RM    := /bin/rm -f
RMDIR := /bin/rm -rf
MKDIR := mkdir

#--------------------------------------------------------------------
# installation library name and directories
#
# INSTALL      - install command
# INSTALL_DATA - install data
# LIBDIR       - installation directory for CGNS library
# INCLUDEDIR   - installation directory for CGNS headers
#--------------------------------------------------------------------

INSTALL        := /usr/bin/install -c
INSTALL_DATA   := ${INSTALL} -m 644
INSTLIBDIR     := /usr/local/lib
INSTINCLUDEDIR := /usr/local/include
